@model AirportSample.Models.cityinfo

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<style>
    body {
        
        background-image: url('../../images/front photo.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }
</style>

<center>
   
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()


    <div class="form-" style="margin-left:50%">
        <h1 style="color:darkblue"><b>Airport Finder</b></h1>
        
        <br />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <h3 style="color:darkblue">Source</h3>
        @*@Html.LabelFor(model => model.CITY, htmlAttributes: new { @class = "control-label col-md-2" })*@

    <div class="col-md-10">

        @Html.DropDownList("CityList1", ViewBag.CityList1 as SelectList, "Search here", new { @class = "form-control",@required="true", @placeholder = "Enter Source Location" })
        @Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger" })



    </div>

    </div>

    <div class="form-group">
        @*@Html.LabelFor(model => model.CITY, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <h3 style="color:darkblue">Destination</h3>
        <div class="col-md-10" position="right">

            @Html.DropDownList("CityList2", ViewBag.CityList2 as SelectList, "Search here", new { @class = "form-control",@required="true",@placeholder="Enter Destination Location" })
            @Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger"})
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
    }
</center>





    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
